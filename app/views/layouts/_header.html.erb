<header>
    <% if user_signed_in? %> <!-- ユーザーがログインしているか調べる -->
      <!-- ユーザーがログインしていた時の処理 -->
      <h1> Hello! <%= current_user.name %> </h1>
      <div class = "button">
      <% unless current_page?(root_path) %>
        <%= link_to current_user, method: :get do %><i class="material-icons">home</i>Home<% end %>
      <% end %>
        <%= link_to destroy_user_session_path, method: :delete do %><i class = "material-icons">logout</i>Logout<% end %> <!-- ログアウトをする -->
      </div>
      <% else %>
        <!-- ユーザーがログインしていなかった時の処理 -->
      <h1> TaskShareApp </h1>
      <div class="button">
        <%= link_to new_user_session_path, method: :get do %><i class = "material-icons">login</i>Login<% end %> <!-- ログイン画面に移行する -->
        <%= link_to new_user_registration_path, method: :get do %> <i class = "material-icons">person_add</i>New <% end %> <!-- 新規登録画面に移行する -->
      </div>
    <% end %>
</header>