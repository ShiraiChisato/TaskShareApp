<div class = "title">
  <h2>Your Profile</h2>
  <div class = "button">
    <%= link_to "プロフィール編集", edit_user_registration_path(current_user), method: :get %>
  </div>
</div>
<div class = "rowfield">
  <%= image_tag @user.icon.url %>
  <div>
    <ul>
      <li>name:<%= @user.name %></li>
      <li>e-mail:<%= @user.email %></li>
    </ul>
  </div>
</div>
<div class = "title">
  <h2>Your Projects</h2>
  <div class = "button">
    <%= link_to "プロジェクトに参加", projects_path, method: :get %>
    <%= link_to "プロジェクトを作成", new_project_path , method: :get %>
  </div>
</div>
<div class = "rowitem">
  <% @projects.each do |project| %>
    <div>
      <%= link_to image_tag(project.icon.url), project_path(project.id) %>
      <h3><%= link_to project.name, project_path(project.id) %></h3>
    </div>
  <% end %>
</div>